<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/titleTextView"
            android:layout_alignParentTop="true"
             />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教員名："
            android:id="@+id/teacherText"
            android:layout_below="@id/titleTextView"
    />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="teacher Text"
            android:id="@+id/teacherTextView"
            android:layout_toRightOf="@+id/teacherText"
            android:layout_below="@+id/titleTextView"
             />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回答数："
            android:id="@+id/resText"
            android:layout_below="@id/teacherText"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/resTextView"
            android:layout_toRightOf="@+id/resText"
            android:layout_below="@+id/teacherTextView"
    />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="授業内容："
            android:id="@+id/bodyText"
            android:layout_below="@id/resText"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未回答"
            android:id="@+id/bodyTextView"
            android:layout_toRightOf="@+id/bodyText"
            android:layout_below="@+id/resTextView"
    />


</RelativeLayout>